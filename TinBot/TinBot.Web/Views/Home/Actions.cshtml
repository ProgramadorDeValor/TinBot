            </div>

        </div>
    </div>
</form>
@section scripts
{
    <script>
        $('.test-button').click(function () {
            var json = $(this).closest('.panel').find('textarea').val();
            $.getJSON('@Url.Action("Enqueue")', { json: json });
        })
    </script>
}
