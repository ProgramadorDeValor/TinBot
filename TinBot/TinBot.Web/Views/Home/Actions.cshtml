@using System.Threading.Tasks
@using TinBot.Web.ViewModels
@model  TinBot.Web.ViewModels.ActionsVM

@{ int collapseIndex = 0;}

<form asp-controller="Home" asp-action="Actions" method="POST">
    <div class="panel">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>



    <div class="container">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#mov">Movements</a></li>
            <li><a data-toggle="tab" href="#fac">Faces</a></li>
            <li><a data-toggle="tab" href="#tog">Toggles</a></li>
            <li><a data-toggle="tab" href="#sav">Saved</a></li>
            <li><a data-toggle="tab" href="#seq">Sequences</a></li>
            <li><a data-toggle="tab" href="#spe">Speak</a></li>
            <li><a data-toggle="tab" href="#lis">Listen</a></li>
        </ul>
        <div class="tab-content well">
            <div id="mov" class="tab-pane active">
                @for (int i = 0; i < Model.MovementAcions.Count; i++)
                {
                    <div class="panel panel-info">
                        <button class="test-button pull-left" type="button" style="margin: 7px;">=></button>
                        <div class="panel-heading" data-toggle="collapse" data-target="#collapse@(++collapseIndex)">
                            @Model.MovementAcions[i].Description
                            <div class="pull-right">
                                <input asp-for="MovementAcions[i].IsDeleted" />
                                <span>delete</span>
                            </div>
                        </div>
                        <div id="collapse@(collapseIndex)" class="panel-collapse collapse">
                            <div class="panel-body input-group">
                                <span class="input-group-addon">Json</span>
                                <textarea asp-for="MovementAcions[i].Item" class="form-control" rows="9" style="width: 100%"></textarea>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div id="spe" class="tab-pane">
