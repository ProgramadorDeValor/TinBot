@model  TinBot.Web.ViewModels.Configs


<form asp-controller="Home" asp-action="Configs" method="POST">
    <div class="container">
        <h4>UserNames to UserName</h4>
        @for (int i = 0; i < Model.UserNamesToUserName.Count; i++)
        {
            <div class="input-group">
                <input asp-for="UserNamesToUserName[i].From" style="width: 500px;" />
                <input asp-for="UserNamesToUserName[i].To" />
            </div>
        }

        <h4>UserName to DisplayName</h4>
        @for (int i = 0; i < Model.UserNameToDisplayName.Count; i++)
        {
            <div class="input-group">
                <input asp-for="UserNameToDisplayName[i].From" />
                <input asp-for="UserNameToDisplayName[i].To" style="width: 500px;" />
            </div>
        }

        <h4>IPT</h4>
        <div class="input-group">
            <label>Current</label>
            <input asp-for="IPT"/>
            <label>Bad</label>
            <input asp-for="IPTBadLimit"/>
            <label>Good</label>
            <input asp-for="IPTGoodLimit"/>
        </div>

        <h4>IET</h4>
        <div class="input-group">
            <label>Current</label>
            <input asp-for="IET" />
            <label>Bad</label>
            <input asp-for="IETBadLimit" />
            <label>Good</label>
            <input asp-for="IETGoodLimit" />
        </div>

        <button type="submit">Save</button>
    </div>
</form>